# React App Environment Configuration
REACT_APP_API_BASE_URL=http://localhost:8000

# Optional: Enable source maps for debugging
GENERATE_SOURCEMAP=true

# Optional: Disable automatic browser opening
BROWSER=none

# Optional: Custom port (defaults to 3000)
PORT=3000

# Development server settings
FAST_REFRESH=true

# Database Configuration
DATABASE_URL=sqlite:///./chatbot.db

# Vector Database Configuration
VECTOR_DB_URL=http://localhost:8001
VECTOR_DB_INDEX=chatbot_index

# LLM API Configuration
LLM_API_KEY=your_openai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo
LLM_BASE_URL=https://api.openai.com/v1

# Retrieval Configuration
TOP_K_RETRIEVAL=10
TOP_K_RERANK=5
SIMILARITY_THRESHOLD=0.7

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-secret-key-change-this-in-production-12345
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Subscription Tier Limits
TIER_1_LIMIT=100
TIER_2_LIMIT=200
TIER_3_LIMIT=-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60